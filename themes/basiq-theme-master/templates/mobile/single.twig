{% extends "base.twig" %}

{% block content %}
<div class="container">
	<div class="measure">
		<div class="col-2-3 article-content">
			<h1 class="display--post collapse">{{post.title}}</h1>
			<p class="blog-author">
				<span>By</span><a href="{{post.author.path}}"> {{ post.author.name }} </a><span>&bull;</span> {{ post.post_date|date}}
			</p>
			<div class="article-body">
				{{post.content}}
			</div>
		</div>
		{% if dynamic_sidebar %}
		<div class="">
			{{ dynamic_sidebar }}
		</div>
		{% endif %}
	</div>
</div>
{% endblock %}
